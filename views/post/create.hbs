<h1><i class="bi bi-stickies"></i> New Post</h1>
<form method="post">
    <fieldset>
        <label class="form-label"
        for="title">Title: *</label>
        <input class = "form-control" name="title" id="title" required />
    </fieldset>
    <fieldset>
        <label class ="form-label" for="body">Body: *</label>
        <textarea class ="form-control" name="body" id="body" required></textarea>
    </fieldset> 
    <fieldset>
        <label for="username" class="form-label">Username: *</label>
         <input name="username" class="form-input" id="username" type="hidden" value="{{user.username}}" />
        <input name="usernameDisplay" id="usernameDisplay" class="form-input" required disabled value="{{user.username}}" />
    </fieldset>
    <button class="btn btn-secondary offset-4"> Save
    </button>
</form>